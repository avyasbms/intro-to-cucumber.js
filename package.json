{
  "name": "intro-to-cucumber",
  "version": "1.0.0",
  "description": "Examples for \"Introduction to Cucumber.js\"",
  "main": "index.js",
  "scripts": {
    "simple": "./node_modules/.bin/cucumber.js simple/features -r simple/steps",
    "background": "./node_modules/.bin/cucumber.js background/features -r background/steps",
    "outline": "./node_modules/.bin/cucumber.js outline/features -r outline/steps",
    "datatable": "./node_modules/.bin/cucumber.js datatable/features -r datatable/steps",
    "hooks": "./node_modules/.bin/cucumber.js hooks/features -r hooks/steps",
    "world": "./node_modules/.bin/cucumber.js world/features -r world/steps",
    "events": "./node_modules/.bin/cucumber.js events/features -r events/steps",


    "simplejson": "./node_modules/.bin/cucumber.js simple/features -r simple/steps -f json > cucumber_simple.json",
    "backgroundjson": "./node_modules/.bin/cucumber.js background/features -r background/steps -f json > cucumber_background.json",
    "outlinejson": "./node_modules/.bin/cucumber.js outline/features -r outline/steps -f json > cucumber_outline.json",
    "datatablejson": "./node_modules/.bin/cucumber.js datatable/features -r datatable/steps -f json > cucumber_datatable.json",
    "hooksjson": "./node_modules/.bin/cucumber.js hooks/features -r hooks/steps -f json > cucumber_hooks.json",
    "worldjson": "./node_modules/.bin/cucumber.js world/features -r world/steps -f json > cucumber_world.json",
    "eventsjson": "./node_modules/.bin/cucumber.js events/features -r events/steps -f json > cucumber_events.json"


  },
  "author": "Graham Cox <graham@grahamcox.co.uk>",
  "license": "ISC",
  "dependencies": {
    "chai": "^3.5.0",
    "cucumber": "^2.1.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-shell": "^2.1.0",
    "gulp": "^3.9.1",
    "gulp-shell": "^0.6.3"
  }
}
