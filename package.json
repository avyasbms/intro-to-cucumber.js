{
  "name": "intro-to-cucumber",
  "version": "1.0.0",
  "description": "Examples for \"Introduction to Cucumber.js\"",
  "main": "index.js",
  "scripts": {
    "simple": "cucumber.js simple/features -r simple/steps",
    "background": "cucumber.js background/features -r background/steps",
    "outline": "cucumber.js outline/features -r outline/steps",
    "datatable": "cucumber.js datatable/features -r datatable/steps",
    "hooks": "cucumber.js hooks/features -r hooks/steps",
    "world": "cucumber.js world/features -r world/steps",
    "events": "cucumber.js events/features -r events/steps",


    "simplejson": "cucumber.js simple/features -r simple/steps -f json > cucumber-simple.json",
    "backgroundjson": "cucumber.js background/features -r background/steps -f json > cucumber-background.json",
    "outlinejson": "cucumber.js outline/features -r outline/steps -f json > cucumber-outline.json",
    "datatablejson": "cucumber.js datatable/features -r datatable/steps -f json > cucumber-datatable.json",
    "hooksjson": "cucumber.js hooks/features -r hooks/steps -f json > cucumber-hooks.json",
    "worldjson": "cucumber.js world/features -r world/steps -f json > cucumber-world.json",
    "eventsjson": "cucumber.js events/features -r events/steps -f json > cucumber-events.json"


  },
  "author": "Graham Cox <graham@grahamcox.co.uk>",
  "license": "ISC",
  "dependencies": {
    "chai": "^3.5.0",
    "cucumber": "^2.1.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-shell": "^2.1.0",
    "gulp": "^3.9.1",
    "gulp-shell": "^0.6.3"
  }
}
